<Window x:Class="FileManager.InputWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FileManager"
        mc:Ignorable="d" 
        Loaded="Window_Loaded"
        Title="" Height="130" Width="300" ResizeMode="NoResize">
    <Grid>
        <TextBlock x:Name="TitleWin" HorizontalAlignment="Left" Height="22" Margin="10,0,0,0" VerticalAlignment="Top" Width="274"/>
        <TextBox  x:Name="inputText" Height="23" Margin="10,27,10,0" VerticalAlignment="Top" KeyDown="inputText_KeyPress"/>
        <Button Content="Подтвердить" KeyDown="inputText_KeyPress" HorizontalAlignment="Left" Height="26" Margin="176,55,10,10" VerticalAlignment="Top" Width="100" Click="Button_Click"/>
    </Grid>
</Window>
